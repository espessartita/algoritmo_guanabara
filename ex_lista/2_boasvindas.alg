algoritmo "questao_2"

var
  r, n: caractere
inicio
      r <- "s"
      enquanto (r="s") faca
               escreva("Qual é o seu nome? ")
               leia(n)
               escreval("Olá ",n,", prazer!")
               escreva("Continuar? [S/N]")
               leia(r)
      fimenquanto
      
fimalgoritmo
